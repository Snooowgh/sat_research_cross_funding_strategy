# Darwin Light 多交易所套利系统配置文件
# 请将此文件复制为 .env 并填入真实的API密钥和配置参数

# =============================================================================
# 通用交易配置
# =============================================================================

# 默认杠杆倍数
DEFAULT_LEVERAGE=10

# 危险杠杆阈值（超过此值会发出警告）
DANGER_LEVERAGE=14

# 最小订单金额（美元）
MIN_ORDER_AMOUNT_USD=50

# 默认超时时间（毫秒）
DEFAULT_TIMEOUT=10000

# 接收窗口时间（毫秒，用于API签名）
RECV_WINDOW=5000

# =============================================================================
# Binance 交易所配置
# =============================================================================

# API Key（生产环境）
BINANCE_API_KEY=

# Secret Key（生产环境）
BINANCE_SECRET_KEY=

# ERC20充值地址
BINANCE_ERC20_DEPOSIT_ADDR=

# 费率配置
BINANCE_MAKER_FEE_RATE=0.00018
BINANCE_TAKER_FEE_RATE=0.00045

# 最大杠杆
BINANCE_MAX_LEVERAGE=20

# =============================================================================
# HyperLiquid 交易所配置
# =============================================================================

# 私钥（用于交易）
HYPERLIQUID_PRIVATE_KEY=

# 公钥（钱包地址）
HYPERLIQUID_PUBLIC_KEY=

# 充值私钥
HYPERLIQUID_DEPOSIT_PRIVATE_KEY=

# 费率配置
HYPERLIQUID_MAKER_FEE_RATE=0.00013
HYPERLIQUID_TAKER_FEE_RATE=0.00039

# 最大杠杆
HYPERLIQUID_MAX_LEVERAGE=10

# =============================================================================
# Lighter 交易所配置
# =============================================================================

# L1地址（钱包地址）
LIGHTER_L1_ADDR=

# API私钥
LIGHTER_API_PRIVATE_KEY=

# 账户索引
LIGHTER_ACCOUNT_INDEX=

# API密钥索引
LIGHTER_API_KEY_INDEX=

# Base URL
LIGHTER_BASE_URL=https://mainnet.zklighter.elliot.ai

# 账户类型（standard/premium）
LIGHTER_ACCOUNT_TIER=standard

# 费率配置
LIGHTER_MAKER_FEE_RATE=0
LIGHTER_TAKER_FEE_RATE=0

# =============================================================================
# Aster Finance 交易所配置
# =============================================================================

# API Key
ASTER_API_KEY=

# Secret Key
ASTER_SECRET_KEY=

# ERC20充值地址
ASTER_ERC20_DEPOSIT_ADDR=

# Base URL
ASTER_BASE_URL=https://fapi.asterdex.com

# 费率配置
ASTER_MAKER_FEE_RATE=0.00018
ASTER_TAKER_FEE_RATE=0.00045

# 最大杠杆
ASTER_MAX_LEVERAGE=10

# =============================================================================
# Bybit 交易所配置
# =============================================================================

# API Key
BYBIT_API_KEY=

# Secret Key
BYBIT_SECRET_KEY=

# 是否使用测试网络
BYBIT_TESTNET=false

# ERC20充值地址
BYBIT_ERC20_DEPOSIT_ADDR=

# 费率配置
BYBIT_MAKER_FEE_RATE=0.0002
BYBIT_TAKER_FEE_RATE=0.00055

# 最大杠杆
BYBIT_MAX_LEVERAGE=100

# =============================================================================
# OKX 交易所配置
# =============================================================================

# API Key
OKX_API_KEY=

# Secret Key
OKX_SECRET_KEY=

# Passphrase
OKX_PASSPHRASE=

# 是否使用模拟交易
OKX_SANDBOX=false

# ERC20充值地址
OKX_ERC20_DEPOSIT_ADDR=

# 费率配置
OKX_MAKER_FEE_RATE=0.00015
OKX_TAKER_FEE_RATE=0.0005

# 最大杠杆
OKX_MAX_LEVERAGE=20

# =============================================================================
# 通知配置
# =============================================================================

# Slack Webhook URL（可选）
SLACK_WEBHOOK_URL=

# Telegram Bot Token（可选）
TELEGRAM_BOT_TOKEN=

# Telegram Chat ID（可选）
TELEGRAM_CHAT_ID=

# =============================================================================
# 日志配置
# =============================================================================

# 日志级别（DEBUG/INFO/WARNING/ERROR）
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE_PATH=./logs/

# 是否启用控制台日志
LOG_CONSOLE_ENABLED=true

# =============================================================================
# 实时对冲引擎默认配置
# =============================================================================
# 交易模式 limit_taker, taker_taker
RH_DEFAULT_TRADE_MODE=taker_taker
# Z-Score阈值
RH_DEFAULT_ZSCORE_THRESHOLD=2

# 默认数量范围
RH_DEFAULT_MIN_AMOUNT=0.001
RH_DEFAULT_MAX_AMOUNT=1.0
RH_DEFAULT_AMOUNT_STEP=0.001

# 默认风控参数
RH_DEFAULT_MIN_YIELD_RATE=0.001
RH_DEFAULT_MAX_SPREAD=0.005
RH_DEFAULT_ORDERBOOK_FRESHNESS=1.0
RH_DEFAULT_MIN_LIQUIDITY=1000

# 默认超时设置
# 秒
RH_DEFAULT_NO_TRADE_TIMEOUT=300
RH_DEFAULT_ENGINE_TIMEOUT=3600

# =============================================================================
# 通知配置 - 日志和告警分开
# =============================================================================

TELEGRAM_BOT_CHAT_ID=
TELEGRAM_BOT_TOKEN_LOG=
TELEGRAM_BOT_TOKEN_ALERT=
